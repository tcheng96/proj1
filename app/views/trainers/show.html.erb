<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

  <%= button_to "Create new Pokemon", new_pokemon_path, :class => "button medium", :method => :get %>

<table style="width:100%">
  <tr>
    <td><b>Pokemon</b></td>
    <td><b>Level</b></td>
    <td><b>Health</b></td>
    <td><b>Damage</b></td>
  </tr>
  <tr>
    <% @trainer.pokemons.each do |mon|%>
    <td><%= mon.name %></td>
    <td><%= mon.level %></td>
    <td><%= mon.health %>
    <td><%= button_to 'Damage!', damage_path(id: mon), :class => "button medium", :method => :patch %></td>
  </tr>
  <% end %>
</table>
